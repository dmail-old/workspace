{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch with node",
			"program": "${file}"
		},
		{
			"name": "Launch as dist",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/.vscode/runAsDist.js",
			"args": ["${file}"],
			"cwd": "${workspaceRoot}",
			"env": {
				"NODE_ENV": "development",
				"NODE_PATH": "${workspaceRoot}/dist"
			}
		},
		{
			"type": "node",
			"protocol": "inspector",
			"request": "launch",
			"name": "Launch with babel-node",
			"preLaunchTask": null,
			"runtimeExecutable": "babel-node", // you have to npm i -g babel-node
			"runtimeArgs": ["--nolazy"],
			"stopOnEntry": false,
			"env": {
				"NODE_ENV": "development"
			},
			"sourceMaps": true,
			"program": "${file}",
			"skipFiles": ["packages/signal/src/**"]
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attacher au port",
			"address": "localhost",
			"port": 5858
		}
	]
}
